rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthed() {
      return request.auth != null;
    }
    match /orgs/{orgId} {
      allow read, write: if isAuthed();
      match /users/{userId} { allow read, write: if isAuthed(); }
      match /inspections/{inspectionId} {
        allow read, write: if isAuthed();
        match /items/{itemId} { allow read, write: if isAuthed(); }
      }
      match /templates/{templateId} { allow read, write: if isAuthed(); }
    }
  }
}
